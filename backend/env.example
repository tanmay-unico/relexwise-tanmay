# Database - Local Development (Docker)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=yourpassword
DB_NAME=streamsync

# Database - AWS RDS Production (use these for AWS deployment)
# DB_HOST=streamsync-lite.c3k6auoki55f.ap-south-1.rds.amazonaws.com
# DB_PORT=5432
# DB_USERNAME=your-rds-username
# DB_PASSWORD=your-rds-password
# DB_NAME=streamsync-lite

# Server
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# JWT
JWT_SECRET=change-me
JWT_EXPIRATION=7d

# YouTube
YOUTUBE_API_KEY=your-youtube-api-key
YT_CACHE_TTL_MIN=10
YOUTUBE_CHANNEL_ID=your-youtube-channel-id

# Firebase Admin
# Option 1: Use JSON string (recommended - paste entire service account JSON as single line)
FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"your-project-id",...}

# Option 2: Use individual variables (alternative)
# FIREBASE_PROJECT_ID=your-firebase-project-id
# FIREBASE_CLIENT_EMAIL=your-firebase-client-email
# FIREBASE_PRIVATE_KEY=your-firebase-private-key

# Worker Configuration
NOTIF_MAX_RETRIES=5
NOTIFICATION_WORKER_ENABLED=true

# Rate Limiting
TEST_PUSH_RATE_LIMIT=5
TEST_PUSH_WINDOW_MS=60000

